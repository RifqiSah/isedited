extends layout

block content
  .title
    h1 Is Edited?
    p You don't have to be fooled anymore by edited photos!
  form(action='/upload', method='post', enctype='multipart/form-data')
    .file-upload
      button.file-upload-btn(type='button', onclick='$(".file-upload-input").trigger("click")') Select Image
      .file-upload-placeholder
        input.file-upload-input(type='file', onchange='readURL(this);', accept='image/*', name='image')
        .drag-text
          h3 Drag and drop an image or click Select Image
      .file-upload-preview
        .row
          span.file-upload-filename
        .row.try(style={'margin-top': '15px', 'display': 'none'})
          a(href='/', title='Check another image') Check another image
        .row
          img.file-upload-image(src='#', alt='Uploaded image')
        .row
          .column.file-upload-process
            button.process-image(type='submit', name='submit')
              span Process Image
          .column.file-upload-remove
            button.remove-image(type='button', onclick='removeUpload()')
              span.image-title Remove Image